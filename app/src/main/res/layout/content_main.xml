<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="activity.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
    <RadioGroup
        android:id="@+id/main_tabBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/selector_textcolor"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_love"
            android:gravity="center"
            android:text="心愿"
            android:textColor="@color/selector_textcolor"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_discover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:layout_marginBottom="5dp"
            android:drawableTop="@drawable/selector_discover"
            android:gravity="center"
            android:text="发现"
            android:textColor="@color/selector_textcolor"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/selector_my"
            android:gravity="center"
            android:text="我的"
            android:layout_marginBottom="5dp"
            android:textColor="@color/selector_textcolor"
            android:textSize="12sp" />

    </RadioGroup>
</LinearLayout>
